const Reservations = require('../models/Reservations');
exports.addReservations = (req, res) => {
    
    const reservations = new Reservations(req.body)
  
    reservations.save()
      .then(result => {
        res.send(result);
        console.log("added");
      })
      .catch(err => {
        console.log(err);
      });
  };
// getting all the users

exports.viewReservations = (req, res) => {                                               ``
    Reservations.find({})
      .then(result => {
        res.send(result);
      })
      .catch(err => {
        console.log(err);
      });
    };

    exports.getReservations = (req, res) => {
      Reservations.find({Name:req.params.name})
        .then(result => {
          res.send(result);
        })
        .catch(err => {
          console.log(err);
        });
    };

    exports.updateReservations = (req,res)=>{
      Reservations.findByIdAndUpdate(req.params.id,req.body).then(result =>{
  
          res.status(200).send("Reservation updated ");
          console.log('The Reservation is Updated successfully !');
      }).catch(err => {
          console.log(err);
        });
  
    };
  
    //Deleting an existing reservation
    exports.deleteReservations = (req,res)=>{
      Reservations.findByIdAndRemove(req.params.id).then(result =>{
  
          res.status(200).send("Reservation Deleted ");
          console.log("The Reservation is deleted successfully !");
      }).catch(err => {
          console.log(err);
        });
  
    };